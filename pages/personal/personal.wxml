<view class="personalContaier">
  <!-- 1. 个人信息 -->
  <view class="profileWrapper">
    <image class="bg" src="/static/image/personal/bgImg.jpg"></image>
    <image class="arc" src="/static/image/personal/arc.png"></image>
    <view class="profile">
      <!-- 1.1 未登录 -->
      <block wx:if="{{!isLogin}}">
        <button bindtap="getUserProfile" class="bt">
          <image class="avartor" src="/static/image/personal/missing-face.png"></image>
          <text class="nickName">未登录</text>
        </button>

      </block>
      <!-- 1.2 已登录 -->
      <block wx:else>
        <image class="avartor" src="{{userInfo.avatarUrl}}"></image>
        <text class="nickName">{{userInfo.nickName}}</text>
        <!-- <image class="avartor" src="{{userInfo.avatarUrl}}"></image>
        <text class="nickName">{{userInfo.nickName}}</text> -->
      </block>

    </view>
  </view>
  <!-- 2. 收藏 -->
  <view class="collect">
    <view class="header">收藏</view>
    <scroll-view class="collectWrapper" enable-flex scroll-x>
      <view class="collect-item" wx:for="{{collectList}}" wx:key="shopID">
        <!-- 2.1 删除收藏的图标 -->
        <view class="deleteIconWrapper">
          <view class="deleteIconOut" wx:if="{{item.goDelete}}">
            <text class=" iconfont icon-guanbi" bindtap="switchDelete" data-index="{{index}}"></text>
          </view>
          <view class="deleteIconIn" wx:else>
            <button size="mini" type="warn" data-index="{{index}}" bindtap="switchCollect">删除收藏</button>
            <text class="iconfont icon-return" bindtap="switchDelete" data-index="{{index}}"></text>
          </view>
        </view>
        <!-- 2.2 图片 -->
        <image src="{{item.picUrl}}"></image>
        <view class="bottom">
          <text class="title">{{item.title}}</text>
          <button open-type="share" class="share-button" data-url="{{item.picUrl}}" data-title="{{item.title}}"><text
              class="iconfont icon-gengduo buttontext"></text></button>
        </view>
      </view>
    </scroll-view>
  </view>
  <!-- 3. 历史 -->
  <view class="collect">
    <view class="header">历史</view>
    <scroll-view class="collectWrapper" enable-flex scroll-x>
      <view class="collect-item" wx:for="{{historyList}}" wx:key="shopID">
        <image src="{{item.picUrl}}"></image>
        <view class="bottom">
          <text class="title">{{item.title}}</text>
          <button open-type="share" class="share-button" data-url="{{item.picUrl}}" data-title="{{item.title}}"><text
              class="iconfont icon-gengduo buttontext"></text></button>
        </view>
      </view>
    </scroll-view>
  </view>
</view>