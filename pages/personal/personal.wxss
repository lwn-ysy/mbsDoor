/* 1. 个人信息 */
page {
  background-color: #fff;
}

.profileWrapper {
  position: relative;
}

.profileWrapper .bg {
  width: 750rpx;
  height: 360rpx;
}

.profileWrapper .arc {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 36rpx;
  z-index: 10;

}

.profileWrapper .profile {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  opacity: 0.9;
  width: 400rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.profile .bt {
  display: flex;
  justify-content: center;
  align-items: center;
}

.profile .avartor {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
}

.profile .nickName {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
}

/* 2. 收藏 */
.collect {
  background-color: #f7f7f7;
  /* height: 330.6rpx; */
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}

.collect .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #fff;
}

.collect .header .title {
  font-size: 30rpx;
  font-weight: bolder;
}

.collect .header .btn button {
  font-size: 20rpx;
  margin-left: 20rpx;
}

.collectWrapper {
  display: flex;
  flex-wrap: nowrap;
  height: 240.6rpx;
  margin: 20rpx 0;
}

.nofund-wrapper {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.nofund-wrapper .tips{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.nofund-wrapper .bigsize{
  font-size: 28rpx;
  color: rgb(99, 97, 97);

}
.nofund-wrapper .smallsize{
  font-size: 20rpx;
  color: rgb(99, 97, 97);

}
.nofund-wrapper .nofound-img {
  width: 250rpx;
  height: 250rpx;
}

.collectWrapper .collect-item {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 240.6rpx;
  margin-right: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.collect-item .deleteIconWrapper {
  position: absolute;
  right: 0;
  top: 0;
}

.collectWrapper .collect-item image {
  width: 240rpx;
  height: 320rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.collect-item .bottom {
  width: 240rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 0 10rpx;
}

.collectWrapper .collect-item .title {
  font-size: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.collect-item .bottom .share-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30rpx;
  margin: 0;
  padding: 0;
}